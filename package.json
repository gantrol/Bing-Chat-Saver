{
  "name": "bing-chat-saver",
  "displayName": "Bing Chat saver",
  "version": "0.2.5",
  "description": "Saving Bing Chat for you, for sharing",
  "author": "gantrol",
  "scripts": {
    "dev": "plasmo dev",
    "test": "jest",
    "build": "plasmo build && plasmo package",
    "build:firefox": "plasmo build --target=firefox-mv2 --zip",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.2.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "dexie": "^3.2.3",
    "marked": "^4.2.12",
    "modern-screenshot": "^4.4.9",
    "plasmo": "0.65.0",
    "svelte": "3.55.1",
    "svelte-preprocess": "5.0.1",
    "turndown": "^7.1.1"
  },
  "devDependencies": {
    "@jest/globals": "29.4.1",
    "@jest/types": "29.4.1",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
    "@tailwindcss/typography": "^0.5.9",
    "@types/chrome": "0.0.210",
    "@types/node": "18.11.18",
    "autoprefixer": "^10.4.13",
    "daisyui": "^2.46.1",
    "jest": "29.4.1",
    "jest-environment-jsdom": "29.4.1",
    "jest-webextension-mock": "3.8.8",
    "postcss": "^8.4.7",
    "prettier": "2.8.3",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.5",
    "typescript": "4.9.4"
  },
  "manifest": {
    "name": "__MSG_extensionName__",
    "permissions": [
      "declarativeNetRequest",
      "storage"
    ],
    "host_permissions": [
      "*://*.bing.com/*"
    ],
    "default_locale": "en"
  }
}
